extends layout

block content
  #container
    div( id="newNote")
      br
      input(type="text", id="title", name="title", placeholder="Note name", maxlength="25").form-control
      br
      br
      textarea(name="note", id="text", cols="22", rows="10", form="newForm", placeholder="Write your note here...").form-control
      br
      br
      input(type="submit", value="Add Note" onclick="addNote()").btn.btnn
      br
      br
      input(type="submit", value="Close Form", onclick="closeForm(), loadNotes()").btn.btnn
    br
    div(id="addForm", onclick="openForm()").addBtn
      p.NoteHead.AddNotePos Add new note
      img(src='/images/plusbtn.png')
    br  
    div(id="notes").parent
    div(id="readNote")
      
