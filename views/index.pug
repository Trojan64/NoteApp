extends layout

block content
  #container
    div( id="newNote")
      br
      input(type="text", id="title", name="title", placeholder="Note name", maxlength="25").form-control.btm
      br

      textarea(name="note", id="text", cols="22", rows="15", form="newForm", placeholder="Write your note here...").form-control
      br

      div.btnCenter
        input(type="submit", value="Add Note" onclick="addNote()").btn.btnn
        input(type="submit", value="Close Form", onclick="closeForm(), loadNotes()").btn.btnn
    br 
    div(id="notes").parent
    div(id="readNote")
        input(id="Titel", type="text").form-control.btm
        br
        textarea(id="Notering" type="text" rows="15").form-control
        br
        input(id="Save", type="submit", value="Close & Save").btn.btnn
